<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_text_greeting_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_text_greeting_v_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9537713" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_text_greeting_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.015" />

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="안녕하세요, 권관우 님"
        android:fontFamily="@font/pretendard_gov_semibold"
        android:textSize="24sp"
        android:textColor="#010101"
        app:layout_constraintStart_toStartOf="@id/guideline_text_greeting_v"
        app:layout_constraintTop_toTopOf="@id/guideline_text_greeting_h"
        app:layout_constraintBottom_toBottomOf="@id/guideline_text_greeting_h_end"/>

    <ImageView
        android:id="@+id/iv_helloIcon"
        android:src="@drawable/ic_hello"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.068"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toEndOf="@id/tv_greeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintTop_toTopOf="@id/guideline_text_greeting_h"
        app:layout_constraintBottom_toBottomOf="@id/guideline_text_greeting_h_end"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_text_greeting_h_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.053" />

    <TextView
        android:id="@+id/tv_live_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실시간 뉴스"
        android:textColor="#010101"
        android:fontFamily="@font/pretendard_gov_semibold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/guideline_text_greeting_h_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_text_greeting_v"
        app:layout_constraintVertical_bias="0.02"/>

    <!-- 여기서 부터 다음 주석까지 카드 뉴스. 해당 레이아웃은 단순 배치용이며
     개발 시 처음부터 새로 시작해야 함 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iv_temp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_home_news"
        android:elevation="1dp"
        android:translationZ="2dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_live_news"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_news_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_news_indicator"
            android:elevation="1dp"
            app:layout_constraintWidth_percent="0.10"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@id/iv_news_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/iv_news_thumbnail"
            app:layout_constraintTop_toTopOf="@id/iv_news_thumbnail"
            app:layout_constraintBottom_toBottomOf="@id/iv_news_thumbnail"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintVertical_bias="0.08"
            >

            <TextView
                android:id="@+id/tv_news_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 / 5"
                android:fontFamily="@font/pretendard_gov_medium"
                android:textColor="#FAF6F5"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@id/bg_news_indicator"
                app:layout_constraintEnd_toEndOf="@id/bg_news_indicator"
                app:layout_constraintTop_toTopOf="@id/bg_news_indicator"
                app:layout_constraintBottom_toBottomOf="@id/bg_news_indicator"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_news_thumbnail"
            android:src="@drawable/temp"
            android:background="@drawable/bg_news_thumbnail"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"
            android:clipToOutline="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.93"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="@id/iv_temp"
            app:layout_constraintEnd_toEndOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/iv_temp"
            app:layout_constraintBottom_toBottomOf="@id/iv_temp"
            app:layout_constraintVertical_bias="0.1"/>

        <TextView
            android:id="@+id/tv_news_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV조선"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/iv_temp"
            app:layout_constraintEnd_toEndOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/iv_temp"
            app:layout_constraintBottom_toBottomOf="@id/iv_temp"
            app:layout_constraintVertical_bias="0.63"
            app:layout_constraintHorizontal_bias="0.05"/>

        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08 / 04"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/iv_temp"
            app:layout_constraintEnd_toEndOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/iv_temp"
            app:layout_constraintBottom_toBottomOf="@id/iv_temp"
            app:layout_constraintVertical_bias="0.63"
            app:layout_constraintHorizontal_bias="0.95"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="[단독] &quot;승객이 보이스피싱범 같다&quot;...5천만 원 피해 막은 택시기사"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#010101"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintWidth_percent="0.93"
            app:layout_constraintStart_toStartOf="@id/iv_temp"
            app:layout_constraintEnd_toEndOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/iv_temp"
            app:layout_constraintBottom_toBottomOf="@id/iv_temp"
            app:layout_constraintVertical_bias="0.82"/>

        <TextView
            android:id="@+id/tv_news_caster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="허유하 기자"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/iv_temp"
            app:layout_constraintEnd_toEndOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/iv_temp"
            app:layout_constraintBottom_toBottomOf="@id/iv_temp"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.96"/>

        <TextView
            android:id="@+id/tv_news_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버뉴스 바로가기"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#666666"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="@id/iv_temp"
            app:layout_constraintEnd_toEndOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/iv_temp"
            app:layout_constraintBottom_toBottomOf="@id/iv_temp"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.96"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 카드 뉴스 끝 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_menu_first"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_home_menu"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:clipToOutline="true"
        android:elevation="1dp"
        android:translationZ="2dp"
        app:layout_constraintWidth_percent="0.435"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_text_greeting_v"
        app:layout_constraintTop_toBottomOf="@id/iv_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="통화녹음\n업로드"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#010101"
            android:lineSpacingExtra="5dp"
            app:layout_constraintTop_toTopOf="@id/cl_menu_first"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_first"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@id/cl_menu_first"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_first"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_arrow_first"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_home_menu_arrow"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/cl_menu_first"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_first"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintTop_toTopOf="@id/cl_menu_first"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_first"
            app:layout_constraintVertical_bias="0.83" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintTop_toTopOf="@id/bg_arrow_first"
                app:layout_constraintBottom_toBottomOf="@id/bg_arrow_first"
                app:layout_constraintStart_toStartOf="@id/bg_arrow_first"
                app:layout_constraintEnd_toEndOf="@id/bg_arrow_first"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_menu_record"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="@id/cl_menu_first"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_first"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintTop_toTopOf="@id/cl_menu_first"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_first"
            app:layout_constraintVertical_bias="0.83"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_menu_second"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_home_menu"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:clipToOutline="true"
        android:elevation="1dp"
        android:translationZ="2dp"
        app:layout_constraintWidth_percent="0.435"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toStartOf="@id/guideline_text_greeting_v_end"
        app:layout_constraintTop_toBottomOf="@id/iv_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌번호\n조회"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#010101"
            android:lineSpacingExtra="5dp"
            app:layout_constraintTop_toTopOf="@id/cl_menu_second"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_second"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@id/cl_menu_second"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_second"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_arrow_second"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_home_menu_arrow"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/cl_menu_second"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_second"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintTop_toTopOf="@id/cl_menu_second"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_second"
            app:layout_constraintVertical_bias="0.83" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintTop_toTopOf="@id/bg_arrow_second"
                app:layout_constraintBottom_toBottomOf="@id/bg_arrow_second"
                app:layout_constraintStart_toStartOf="@id/bg_arrow_second"
                app:layout_constraintEnd_toEndOf="@id/bg_arrow_second" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_menu_searchacc"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="@id/cl_menu_second"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_second"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintTop_toTopOf="@id/cl_menu_second"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_second"
            app:layout_constraintVertical_bias="0.83"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_menu_third"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_home_menu"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:clipToOutline="true"
        android:elevation="1dp"
        android:translationZ="2dp"
        app:layout_constraintWidth_percent="0.435"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_text_greeting_v"
        app:layout_constraintTop_toBottomOf="@id/iv_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호\n조회"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#010101"
            android:lineSpacingExtra="5dp"
            app:layout_constraintTop_toTopOf="@id/cl_menu_third"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_third"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@id/cl_menu_third"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_third"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_arrow_third"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_home_menu_arrow"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/cl_menu_third"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_third"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintTop_toTopOf="@id/cl_menu_third"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_third"
            app:layout_constraintVertical_bias="0.83" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintTop_toTopOf="@id/bg_arrow_third"
                app:layout_constraintBottom_toBottomOf="@id/bg_arrow_third"
                app:layout_constraintStart_toStartOf="@id/bg_arrow_third"
                app:layout_constraintEnd_toEndOf="@id/bg_arrow_third" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_menu_searchnum"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="@id/cl_menu_third"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_third"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintTop_toTopOf="@id/cl_menu_third"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_third"
            app:layout_constraintVertical_bias="0.83"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_menu_fourth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_home_menu"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:clipToOutline="true"
        android:elevation="1dp"
        android:translationZ="2dp"
        app:layout_constraintWidth_percent="0.435"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toStartOf="@id/guideline_text_greeting_v_end"
        app:layout_constraintTop_toBottomOf="@id/iv_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의심 번호\n제보"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_gov_medium"
            android:textColor="#010101"
            android:lineSpacingExtra="5dp"
            app:layout_constraintTop_toTopOf="@id/cl_menu_fourth"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_fourth"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@id/cl_menu_fourth"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_fourth"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_arrow_fourth"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_home_menu_arrow"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/cl_menu_fourth"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_fourth"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintTop_toTopOf="@id/cl_menu_fourth"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_fourth"
            app:layout_constraintVertical_bias="0.83" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintTop_toTopOf="@id/bg_arrow_fourth"
                app:layout_constraintBottom_toBottomOf="@id/bg_arrow_fourth"
                app:layout_constraintStart_toStartOf="@id/bg_arrow_fourth"
                app:layout_constraintEnd_toEndOf="@id/bg_arrow_fourth" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="-1"
            android:src="@drawable/ic_menu_report"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="@id/cl_menu_fourth"
            app:layout_constraintEnd_toEndOf="@id/cl_menu_fourth"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintTop_toTopOf="@id/cl_menu_fourth"
            app:layout_constraintBottom_toBottomOf="@id/cl_menu_fourth"
            app:layout_constraintVertical_bias="0.83"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


