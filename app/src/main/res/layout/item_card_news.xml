<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="20dp"
    android:background="@drawable/bg_home_menu"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_gov_semibold"
        android:maxLines="2"
        android:textColor="#010101"
        android:textSize="18sp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="[샘플] AI 보이스피싱, 이제 목소리만으로 감쪽같이 속인다" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_gov_medium"
        android:textColor="#444444"
        android:textSize="15sp"
        android:lineSpacingExtra="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_pubDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="경찰청 사이버수사대는 최근 인공지능 기술을 활용해 가족이나 지인의 목소리를 흉내 내는 신종 보이스피싱 수법이 등장했다며 각별한 주의를 당부했다." />

    <TextView
        android:id="@+id/tv_pubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2025.08.14" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네이버뉴스 바로가기"
        android:textColor="#0000FF"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_gov_semibold"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>